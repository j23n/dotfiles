[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[alias]
    merge-log = "!f() { git merge --no-ff -m \"Merge $1$(echo; echo; git log main..$1 --pretty=format:'- %s')\" $1; }; f"
