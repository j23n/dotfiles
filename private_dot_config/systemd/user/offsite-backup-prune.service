[Unit]
Description=Offsite backup prune

[Service]
Type=simple
ExecStartPre=restic unlock
ExecStartPre=sleep 5
ExecStart=restic forget --verbose --group-by "paths,tags" --keep-hourly $RETENTION_HOURLY --keep-daily $RETENTION_DAYS --keep-weekly $RETENTION_WEEKS --keep-monthly $RETENTION_MONTHS --keep-yearly $RETENTION_YEARS
EnvironmentFile=%h/.config/restic/offsite-backup.conf


